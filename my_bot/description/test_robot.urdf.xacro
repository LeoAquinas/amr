<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot" >

    <xacro:include filename="inertial_macros.xacro"/>
    <xacro:include filename="test_lidar.xacro"/>
    <xacro:include filename="wheels.xacro"/>


    <!-- MATERIALS -->
    
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">
    
    </link>

    <!-- BASE FOOTPRINT LINK -->
    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="base_footprint">
    
    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <!-- <origin xyz="0 0 0.15375"/> -->
            <origin xyz="0 0 0.185"/>
            <geometry>
                <box size="0.515 0.384 0.300"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.185"/>
            <geometry>
                <box size="0.515 0.440 0.300"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.515" y="0.384" z="0.300">
            <origin xyz="0 0 0.185" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/Black</material>
    </gazebo>


    <!-- LEFT SIDE PIECE LINK -->

    <joint name="left_side_piece_joint" type="fixed">
        <parent link="chassis"/>
        <child link="left_side_piece_link"/>
        <origin xyz="0.182 0.206 0.0945"/>
    </joint>

    <link name="left_side_piece_link">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.167 0.028 0.119"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.167 0.028 0.119"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.167" y="0.028" z="0.119">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="left_side_piece_link">
        <material>Gazebo/Red</material>
    </gazebo>

    <!-- RIGHT SIDE PIECE LINK -->

    <joint name="right_side_piece_joint" type="fixed">
        <parent link="chassis"/>
        <child link="right_side_piece_link"/>
        <origin xyz="0.182 -0.206 0.0945"/>
    </joint>

    <link name="right_side_piece_link">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.167 0.028 0.119"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
